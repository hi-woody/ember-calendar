<ul class="as-calendar-timetable__slots">
  {{#each timeSlots as |timeSlot|}}
    <li class="as-calendar-timetable__slot-item" style={{timeSlotStyle}}></li>
  {{/each}}
</ul>

<ul class="as-calendar-timetable__days">
  {{#each days as |day|}}
    <li class="as-calendar-timetable__day {{if day.isToday "as-calendar-timetable__day--today"}}">
      {{#if day.isToday}}
        <div class="as-calendar-timetable__day--today--divider" style={{todayStyle}}></div>
      {{/if}}
      {{yield day this}}
    </li>
  {{/each}}
</ul>
